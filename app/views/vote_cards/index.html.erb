<p id="notice"><%= notice %></p>

<h1>Vote Cards</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Best in show</th>
      <th>Most decorative</th>
      <th>Most delicious</th>
      <th>Most traditional</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vote_cards.each do |vote_card| %>
      <tr>
        <td><%= vote_card.name %></td>
        <td><%= vote_card.best_in_show %></td>
        <td><%= vote_card.most_decorative %></td>
        <td><%= vote_card.most_delicious %></td>
        <td><%= vote_card.most_traditional %></td>
        <td><%= link_to 'Show', vote_card %></td>
        <td><%= link_to 'Edit', edit_vote_card_path(vote_card) %></td>
        <td><%= link_to 'Destroy', vote_card, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Vote Card', new_vote_card_path %>
